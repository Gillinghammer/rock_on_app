<h1>Listing songs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Album</th>
    <th>Band</th>
    <th>Listen</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td><%= song.album.try :name %></td>
    <td><%= song.album.user.try :band %></td>
    <td><%= audio_tag(song.track, autoplay: false, controls: true) %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

