label[for="custom_font_Roboto Slab"] {
   font-family: 'Roboto Slab';
    font-size: 2em;
}

label[for="custom_font_New Rocker"] {
   font-family: 'New Rocker' ;
   font-size: 2em;
}

label[for="custom_font_Ricasso"] {
   font-family: 'Ricasso' ;
   font-size: 2em;
}

